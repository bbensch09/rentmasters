<%= form_for @quote, multipart:true do |f| %>

  <% if @quote.errors.any? %>
    <div id="error_explanation">
      <h2>
        <span class="errors">
          <%= pluralize(@quote.errors.count, "error") %>
        </span> prohibited this quote from being saved:
      </h2>
      <ul>
        <% @quote.errors.full_messages.each do |msg| %>
          <li class="errors"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<section class="new-quote-form">

  <div class="col-md-3 text-right">    <%= f.label :first_name, "First Name", :class=>"edit-label" %> </div>
  <div class="col-md-9 text-left">    <%= f.text_area :first_name, size:"35x1" %> </div>

  <div class="col-md-3 text-right">    <%= f.label :last_name, "Last Name", :class=>"edit-label" %> </div>
  <div class="col-md-9 text-left">    <%= f.text_area :last_name, size:"35x1" %> </div>

  <div class="col-md-3 text-right">    <%= f.label :email, "Email", :class=>"edit-label" %> </div>
  <div class="col-md-9 text-left">    <%= f.text_area :email, size:"35x1" %> </div>

  <div class="col-md-3 text-right">    <%= f.label :bedrooms, "Number of Bedrooms", :class=>"edit-label" %> </div>
  <div class="col-md-9 text-left">      <%= f.select :bedrooms, options_for_select(MarketRent.bedrooms_options, @quote.bedrooms) %> </div>

  <div class="col-md-3 text-right">    <%= f.label :neighborhood, "Neighborhood", :class=>"edit-label" %> </div>
  <div class="col-md-9 text-left">    <%= f.select :neighborhood, options_for_select(MarketRent.neighborhood_options, @quote.neighborhood) %> </div>

  <div class="col-md-3 text-right">    <%= f.label :condition, "What condition is the apartment in?", :class=>"edit-label" %> </div>
  <div class="col-md-9 text-left">   <%= f.select :condition, options_for_select(Quote.condition_options, @quote.condition) %> </div>
  <div class="col-md-3 text-right">    <%= f.label :current_rent, "How much do you currently pay in monthly rent?", :class=>"edit-label" %> </div>
  <div class="col-md-9 text-left">  <%= f.text_area :current_rent, size:"35x1" %> </div>
  

  <div class="col-md-12 text-center">
      <%= f.submit 'Request Your Estimate', :class=>"class=btn btn-featured font-cta" %>
  </div>
  <div class="vertical_space cl-b"> </div>

</section>
<% end %>